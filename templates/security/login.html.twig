{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-items-center vh-80">
            <div class="col-md-4">
                <div class="card border-0">
                    <div class="card-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}


                            <h1 class="h3 mb-3 fw-light">Login</h1>
                            <input placeholder="E-mail address" type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control mb-3"
                                   autocomplete="email" required autofocus>
                            <input placeholder="Password" type="password" name="password" id="inputPassword" class="form-control"
                                   autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <button class="btn btn-dark w-100 mt-3" type="submit">
                                Sign in
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
